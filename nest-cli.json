{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "./mailer/templates",
        "outDir": "./dist"
      },
      {
        "include": "./public/*.png",
        "outDir": "./dist"
      }
    ],
    "watchAssets": true,
    "deleteOutDir": true
  }
}